{
  "name": "escenic-cue-live-api",
  "version": "2.0.0",
  "description": "",
  "main": "handler.js",
  "scripts": {
    "test:env": "ansible-playbook infrastructure/all.yml -e 'env=test' --vault-password-file=~/.vault_pass.txt",
    "test:info": "sls info --stage test",
    "test:deploy": "yarn test:env && sls deploy --stage test",
    "test:listener:logs": "sls logs -f listener --tail --stage test",
    "test:listener:deploy": "sls deploy -f listener --stage test",
    "test:listener:invoke": "sls invoke --log -f listener -p dummy_payload/basic.json --stage test",
    "test:consumer:logs": "sls logs -f consumer --tail --stage test",
    "test:consumer:deploy": "sls deploy -f consumer --stage test",
    "test:consumer:invoke": "sls invoke --log -f consumer -p dummy_payload/basic.json --stage test",
    "test:consumer:invoke:local": "sls invoke local -f consumer -p dummy_payload/consumer/entryUpdate.json -s test",
    "test": "LOG_LEVEL=fatal ./node_modules/.bin/jest --config ./jest.config.js",
    "test:watch": "LOG_LEVEL=fatal ./node_modules/.bin/jest --config ./jest.config.js --watch",
    "prettier": "prettier --write \"**/*.{js,json,md}\"",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint --fix ."
  },
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.266.1",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "@types/aws-lambda": "^8.10.110",
    "@types/pino": "^7.0.5",
    "joi": "^17.7.0",
    "pino": "^5.14.0",
    "pino-lambda": "^4.1.0",
    "serverless": "^3.27.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-plugin-aws-alerts": "^1.4.0",
    "serverless-pseudo-parameters": "^2.5.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-teamcity-reporter": "^0.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-typescript": "^2.1.4",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
