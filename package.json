{
  "name": "escenic-cue-live-api",
  "version": "2.0.0",
  "description": "",
  "main": "handler.js",
  "scripts": {
    "test:env": "ansible-playbook infrastructure/all.yml -e 'env=test' --vault-password-file=~/.vault_pass.txt",
    "test:info": "sls info --stage test",
    "test:deploy": "yarn test:env && sls deploy --stage test",
    "test:listener:debug": "SLS_DEBUG=* sls offline start --stage test",
    "test:listener:logs": "sls logs -f listener --tail --stage test",
    "test:listener:deploy": "sls deploy -f listener --stage test",
    "test:listener:invoke": "sls invoke --log -f listener -p dummy_payload/basic.json --stage test",
    "test:consumer:logs": "sls logs -f consumer --tail --stage test",
    "test:consumer:deploy": "sls deploy -f consumer --stage test",
    "test:consumer:invoke": "sls invoke --log -f consumer -p dummy_payload/basic.json --stage test",
    "test:consumer:invoke:local": "sls invoke local -f consumer -s test -p dummy_payload/consumer/entryUpdate.json",
    "test:fetcher:debug": "SLS_DEBUG=* sls offline start --stage test",
    "test:fetcher:logs": "sls logs -f fetcher --tail --stage test",
    "test:fetcher:deploy": "sls deploy -f fetcher --stage test",
    "test:fetcher:invoke": "sls invoke --log -f fetcher -p dummy_payload/basic.json --stage test",
    "test:watch": "LOG_LEVEL=fatal STAGE=test jest --config jest.config.ts --watch",
    "test": "LOG_LEVEL=fatal STAGE=test jest --config jest.config.ts",
    "prettier": "prettier --write \"**/*.{js,json,md}\"",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint --fix ."
  },
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.267.0",
    "@aws-sdk/client-sqs": "^3.266.1",
    "@aws-sdk/util-dynamodb": "^3.267.0",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "aws-xray-sdk": "^3.4.1",
    "joi": "^17.7.0",
    "pino": "^8.10.0",
    "pino-lambda": "^4.1.0",
    "serverless": "^3.27.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-plugin-aws-alerts": "^1.4.0",
    "serverless-pseudo-parameters": "^2.5.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.110",
    "@types/jest": "^29.4.0",
    "@types/pino": "^6.3.4",
    "babel-eslint": "^10.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^3.0.9",
    "jest": "^29.4.2",
    "jest-teamcity-reporter": "^0.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-typescript": "^2.1.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
